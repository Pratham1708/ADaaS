# Backend Environment Variables (.env)
# Copy this file to .env and fill in your values

# Gemini AI API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration (Required for job queue)
# For local development:
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=  # Leave empty for local Redis

# For production (Upstash Redis - FREE):
# REDIS_HOST=your-redis-host.upstash.io
# REDIS_PORT=6379
# REDIS_PASSWORD=your_upstash_password

# CORS Configuration
# For local development:
ALLOWED_ORIGINS=http://localhost:3000

# For production (add your Vercel URL):
# ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Render Deployment Flag (set automatically by Render)
# RENDER=true
