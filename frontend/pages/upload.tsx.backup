import React, { useState } from 'react';
import axios from 'axios';
import { useRouter } from 'next/router';

const API_URL = process.env.NEXT_PUBLIC_API_URL || 'http://localhost:8000';

interface UploadResponse {
    dataset_id: string;
    file_path: string;
    filename: string;
}

interface AnalysisResult {
    dataset_type: string;
    is_valid: boolean;
    issues: string[];
    recommendations: string[];
    metadata: {
        rows: number;
        columns: number;
        column_names: string[];
        missing_values: number;
    };
    column_info: Array<{
        name: string;
        dtype: string;
        missing: number;
        unique: number;
    }>;
    gemini_insights?: any;
    ai_powered?: boolean;
}

interface DashboardResponse {
    job_id: string | null;
    dashboard_url: string;
    analysis_type: string;
    dataset_type: string;
    status: string;
}

export default function UploadPage() {
    const router = useRouter();
    const [file, setFile] = useState<File | null>(null);
    const [uploadResult, setUploadResult] = useState<UploadResponse | null>(null);
    const [analysisResult, setAnalysisResult] = useState<AnalysisResult | null>(null);
    const [error, setError] = useState<string>('');
    const [loading, setLoading] = useState<boolean>(false);
    const [analyzing, setAnalyzing] = useState<boolean>(false);
    const [generatingDashboard, setGeneratingDashboard] = useState<boolean>(false);

    const handleFileChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        if (e.target.files && e.target.files[0]) {
            setFile(e.target.files[0]);
            setUploadResult(null);
            setAnalysisResult(null);
            setError('');
        }
    };

    const handleUpload = async () => {
        if (!file) {
            setError('Please select a file');
            return;
        }

        setLoading(true);
        setError('');

        try {
            const formData = new FormData();
            formData.append('file', file);

            const response = await axios.post<UploadResponse>(
                `${API_URL}/api/v1/datasets/upload`,
                formData,
                { headers: { 'Content-Type': 'multipart/form-data' } }
            );

            setUploadResult(response.data);
            await analyzeDataset(response.data.dataset_id);
        } catch (err: any) {
            setError(`Upload failed: ${err.response?.data?.detail || err.message}`);
        } finally {
            setLoading(false);
        }
    };

    const analyzeDataset = async (dataset_id: string) => {
        setAnalyzing(true);
        try {
            const response = await axios.post<AnalysisResult>(
                `${API_URL}/api/v1/datasets/analyze-smart/${dataset_id}`
            );
            setAnalysisResult(response.data);
        } catch (err: any) {
            setError(`Analysis failed: ${err.response?.data?.detail || err.message}`);
        } finally {
            setAnalyzing(false);
        }
    };

    <div style={{ marginTop: '30px', padding: '25px', border: '2px dashed #2196F3', borderRadius: '12px', backgroundColor: '#f5f5f5' }}>
        <input
            type="file"
            accept=".csv"
            onChange={handleFileChange}
            style={{ marginBottom: '15px', fontSize: '14px' }}
        />
        <br />
        <button
            onClick={handleUpload}
            disabled={loading || !file}
            style={{
                padding: '14px 28px',
                fontSize: '16px',
                fontWeight: 'bold',
                backgroundColor: '#2196F3',
                color: 'white',
                border: 'none',
                borderRadius: '8px',
                cursor: loading || !file ? 'not-allowed' : 'pointer',
                opacity: loading || !file ? 0.6 : 1,
            }}
        >
            {loading ? '‚è≥ Uploading...' : analyzing ? 'ü§ñ Analyzing with Gemini AI...' : 'üì§ Upload & Analyze'}
        </button>
    </div>

    {
        error && (
            <div style={{ marginTop: '20px', padding: '15px', backgroundColor: '#ffebee', border: '2px solid #f44336', borderRadius: '8px' }}>
                <strong style={{ color: '#d32f2f' }}>‚ùå Error:</strong> <span style={{ color: '#d32f2f' }}>{error}</span>
            </div>
        )
    }

    {
        analysisResult && (
            <div style={{ marginTop: '30px', padding: '30px', border: '3px solid #4CAF50', borderRadius: '12px', backgroundColor: '#E8F5E9' }}>
                <div style={{ display: 'flex', alignItems: 'center', marginBottom: '20px' }}>
                    <h2 style={{ margin: 0, fontSize: '24px' }}>
                        {analysisResult.ai_powered ? 'ü§ñ Gemini AI Analysis' : 'üìä Analysis Complete'}
                    </h2>
                    {analysisResult.ai_powered && (
                        <span style={{ marginLeft: '15px', padding: '4px 12px', backgroundColor: '#4CAF50', color: 'white', borderRadius: '12px', fontSize: '12px', fontWeight: 'bold' }}>
                            AI POWERED
                        </span>
                    )}
                </div>

                {(() => {
                    const typeInfo = getDataTypeInfo(analysisResult.dataset_type);
                    return (
                        <div style={{ marginBottom: '20px' }}>
                            <strong>Detected Type:</strong>
                            <div style={{
                                marginTop: '10px',
                                padding: '15px 25px',
                                borderRadius: '10px',
                                backgroundColor: typeInfo.color,
                                color: 'white',
                                fontWeight: 'bold',
                                fontSize: '20px',
                                display: 'inline-block',
                            }}>
                                {typeInfo.emoji} {typeInfo.label}
                            </div>
                        </div>
                    );
                })()}

                <p style={{ fontSize: '16px' }}>
                    <strong>Status:</strong>{' '}
                    <span style={{ color: analysisResult.is_valid ? '#4CAF50' : '#f44336', fontWeight: 'bold', fontSize: '18px' }}>
                        {analysisResult.is_valid ? '‚úÖ VALID' : '‚ùå INVALID'}
                    </span>
                </p>

                <p><strong>üìä Rows:</strong> {analysisResult.metadata.rows.toLocaleString()} | <strong>üìã Columns:</strong> {analysisResult.metadata.columns}</p>
                <p><strong>üìù Column Names:</strong> {analysisResult.metadata.column_names.join(', ')}</p>

                {analysisResult.gemini_insights && (
                    <div style={{ marginTop: '25px', padding: '20px', backgroundColor: 'white', borderRadius: '10px', border: '2px solid #4CAF50' }}>
                        <h3 style={{ marginTop: 0, color: '#4CAF50' }}>ü§ñ Gemini AI Insights</h3>
                        {analysisResult.gemini_insights.description && (
                            <p><strong>Description:</strong> {analysisResult.gemini_insights.description}</p>
                        )}
                        {analysisResult.gemini_insights.key_insights && (
                            <div>
                                <strong>Key Insights:</strong>
                                <ul>
                                    {analysisResult.gemini_insights.key_insights.map((insight: string, idx: number) => (
                                        <li key={idx}>{insight}</li>
                                    ))}
                                </ul>
                            </div>
                        )}
                        {analysisResult.gemini_insights.column_purposes && (
                            <details style={{ marginTop: '15px' }}>
                                <summary style={{ cursor: 'pointer', fontWeight: 'bold', color: '#4CAF50' }}>
                                    üìã Column Purposes (Click to expand)
                                </summary>
                                <ul style={{ marginTop: '10px' }}>
                                    {Object.entries(analysisResult.gemini_insights.column_purposes).map(([col, purpose]: [string, any]) => (
                                        <li key={col}><strong>{col}:</strong> {purpose}</li>
                                    ))}
                                </ul>
                            </details>
                        )}
                    </div>
                )}

                {analysisResult.is_valid && (
                    <div style={{ marginTop: '30px', textAlign: 'center' }}>
                        <button
                            onClick={handleGenerateDashboard}
                            disabled={generatingDashboard}
                            style={{
                                padding: '18px 45px',
                                fontSize: '22px',
                                fontWeight: 'bold',
                                backgroundColor: '#FF9800',
                                color: 'white',
                                border: 'none',
                                borderRadius: '10px',
                                cursor: generatingDashboard ? 'not-allowed' : 'pointer',
                                opacity: generatingDashboard ? 0.6 : 1,
                                boxShadow: '0 4px 8px rgba(0,0,0,0.2)',
                            }}
                        >
                            {generatingDashboard ? '‚è≥ Generating...' : 'üìä View Interactive Dashboard'}
                        </button>
                    </div>
                )}
            </div>
        )
    }

    <div style={{ marginTop: '40px', textAlign: 'center' }}>
        <a href="/jobs" style={{ color: '#2196F3', fontSize: '16px', fontWeight: 'bold', textDecoration: 'none' }}>
            üìã View All Jobs ‚Üí
        </a>
    </div>
        </div >
    );
}
